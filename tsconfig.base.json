{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@env/*": ["environments/*"],
      "@nwc/api/nest/shared/common": [
        "libs/api/nest/shared/common/src/index.ts"
      ],
      "@nwc/api/nest/shared/infrastructure": [
        "libs/api/nest/shared/infrastructure/src/index.ts"
      ],
      "@nwc/api/nest/shared/port": ["libs/api/nest/shared/port/src/index.ts"],
      "@nwc/api/nest/shared/user/core/application-services": [
        "libs/api/nest/shared/user/core/application-services/src/index.ts"
      ],
      "@nwc/api/nest/shared/user/core/domain": [
        "libs/api/nest/shared/user/core/domain/src/index.ts"
      ],
      "@nwc/api/nest/shared/user/core/domain-services": [
        "libs/api/nest/shared/user/core/domain-services/src/index.ts"
      ],
      "@nwc/api/nest/shared/user/infrastructure": [
        "libs/api/nest/shared/user/infrastructure/src/index.ts"
      ],
      "@nwc/api/nest/shared/user/shell": [
        "libs/api/nest/shared/user/shell/src/index.ts"
      ],
      "@nwc/api/nest/shared/user/ui-rest": [
        "libs/api/nest/shared/user/ui-rest/src/index.ts"
      ],
      "@nwc/orders": ["libs/orders/src/index.ts"],
      "@nwc/products": ["libs/products/src/index.ts"],
      "@nwc/ui": ["libs/ui/src/index.ts"],
      "@nwc/users": ["libs/users/src/index.ts"]
    },
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "exclude": ["node_modules", "tmp"]
}
